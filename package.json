{
  "name": "product-api-inversify-prisma",
  "version": "1.0.0",
  "type": "commonjs",
  "main": "dist/src/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",

    "build": "tsc && copyfiles -u 1 src/**/*.json src/**/*.graphql src/**/*.gql src/swagger/*.json dist/src",


    "start": "node dist/src/server.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "dotenv -e .env.test jest --detectOpenHandles --forceExit src/**/*.integration.spec.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.13.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.4.1",
    "express": "^4.19.2",
    "inversify": "^6.0.1",
    "inversify-express-utils": "^6.4.0",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.30",
    "@types/swagger-ui-express": "^4.1.8",
    "copyfiles": "^2.4.1",
    "dotenv-cli": "^8.0.0",
    "jest": "^29.7.0",
    "prisma": "^5.13.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
