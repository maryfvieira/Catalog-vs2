{
  "name": "product-api-inversify-prisma",
  "version": "1.0.0",
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc && copyfiles -u 1 './src/**/*.{json,txt,md}' dist",
    "start": "node dist/server.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "NODE_ENV=test jest --setupFilesAfterEnv=./tests/setup.ts",
    "test:integration": "npx playwright test",
    "postinstall": "prisma generate",
    "test:e2e": "bash scripts/run-e2e.sh"
  },
  "dependencies": {
    "@prisma/client": "^5.13.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.4.1",
    "dotenv-expand": "^12.0.2",
    "express": "^4.19.2",
    "inversify": "^6.0.1",
    "inversify-express-utils": "^6.4.0",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.30",
    "@types/swagger-ui-express": "^4.1.8",
    "copyfiles": "^2.4.1",
    "dotenv-cli": "^8.0.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "prisma": "^5.13.0",
    "start-server-and-test": "^2.0.12",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "wait-on": "^8.0.3"
  }
}
